{
	"name": "screen-recorder",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/brunnerh/screen-recorder.git"
	},
	"type": "module",
	"dependencies": {},
	"devDependencies": {
		"@ffmpeg/core": "^0.11.0",
		"@ffmpeg/ffmpeg": "^0.11.6",
		"@sveltejs/vite-plugin-svelte": "^1.1.0",
		"@types/archiver": "^5.3.1",
		"@types/node": "16",
		"@types/shelljs": "^0.8.11",
		"archiver": "^5.3.1",
		"carbon-components-svelte": "^0.70.12",
		"carbon-icons-svelte": "^11.4.0",
		"carbon-preprocess-svelte": "^0.9.1",
		"cross-env": "^7.0.3",
		"devalue": "^4.2.0",
		"electron": "^21.2.3",
		"electron-packager": "^17.1.1",
		"gh-pages": "^4.0.0",
		"less": "^4.1.3",
		"shelljs": "^0.8.5",
		"shx": "^0.3.4",
		"svelte": "^3.52.0",
		"svelte-preprocess": "^4.10.7",
		"typescript": "^4.8.4",
		"undici": "^5.12.0",
		"vite": "^3.2.2"
	},
	"scripts": {
		"clean": "shx rm -rf out",
		"dev:web": "cross-env PLATFORM=web vite",
		"dev:electron": "cross-env PLATFORM=electron vite",
		"build": "npm run build:electron && npm run build:electron-app && npm run package:electron-app && npm run build:web",
		"build:web": "cross-env PLATFORM=web vite build",
		"watch:web": "cross-env PLATFORM=web vite build -w",
		"preview:web": "cross-env PLATFORM=web vite preview",
		"build:electron": "cross-env PLATFORM=electron vite build",
		"watch:electron": "cross-env PLATFORM=electron vite build -w",
		"build:electron-app": "vite build --config vite.electron.config.ts",
		"watch:electron-app": "vite build --config vite.electron.config.ts --mode=development -w",
		"start:electron-app": "electron ./out/electron/app/main.cjs",
		"package:electron-app": "electron-packager out/electron screen-recorder --platform=win32 --arch=x64 --out=out --overwrite",
		"deploy": "shx touch out/web/.nojekyll && gh-pages -d out/web -t true"
	}
}
